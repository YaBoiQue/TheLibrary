@model IEnumerable<TheWarehouse.Models.Supply>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Index" asp-controller="Suppliers">Suppliers</a>
    <a asp-action="Index" asp-controller="Supplycategories">Categories</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplyCategory.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplyCategory.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SupplyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SupplyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SupplyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>