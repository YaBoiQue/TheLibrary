@model TheWarehouse.Models.Ingredient

@{
    ViewData["Title"] = "CreateFromMenuItem";
}

<h1>Create from Menu Item</h1>

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
