@model IEnumerable<TheWarehouse.Models.Menucategory>

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
<a class="nav-link" asp-area="" asp-controller="Menucategories" asp-action="Index">List</a>

<table class="table">
    <tbody>
        <div class="card-group">
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="card border-primary mb-3 text-center" style="width: 18rem;">
                        <a class="card-block stretched-link text-decoration-none" asp-route-id=@item.MenucategoryId asp-controller="Menuitems" asp-action="ListbyCategory">
                            <div class="card-body">
                                <img class="card-img" src="@item.ImagePath" />
                                <h5 class="card-title"> @item.Name</h5>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </tbody>
</table>
