@model TheWarehouse.Models.Menuitem

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Menuitem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Menucategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Menucategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImagePath)" alt="@Html.DisplayFor(model => model.Name)" style="width:500px" />
        </dd>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Ingredients.First().Supply.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ingredients.First().Supply.Supplier.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Ingredients)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Ingredients.First().Supply.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Ingredients.First().Supply.Supplier.Name)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MenuitemId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
