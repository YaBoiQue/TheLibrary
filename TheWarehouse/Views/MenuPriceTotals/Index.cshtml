@model IEnumerable<TheWarehouse.ViewModels.MenuPriceTotal>

@{
    ViewData["Title"] = "Sale Totals";
}

<h1>Sale Totals</h1>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenucategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenucategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.MenuitemId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
