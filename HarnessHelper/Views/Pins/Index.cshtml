@model IEnumerable<HarnessHelper.Models.Pin>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wire)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plug.PlugId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wire.WireId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PinId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PinId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PinId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
